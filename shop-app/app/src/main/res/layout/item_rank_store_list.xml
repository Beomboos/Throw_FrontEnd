<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_style"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/iv_image_store1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="12dp"
            tools:src="@drawable/ic_map_24"/>

        <TextView
            android:id="@+id/store_name1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_store1"
            app:layout_constraintTop_toTopOf="@id/iv_image_store1"
            app:layout_constraintBottom_toBottomOf="@id/iv_image_store1"
            android:text="가게이름"
            android:textSize="16dp"
            android:ellipsize="end"
            android:singleLine="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>