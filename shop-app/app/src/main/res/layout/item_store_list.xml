<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.deamhome.domain.model.MapStoreInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/list_view_style">

        <ImageView
            android:id="@+id/iv_store_image"
            imageUrl="@{item.storeImageUrl}"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_map_24"/>

        <TextView
            android:id="@+id/store_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_store_image"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/store_type"
            android:text="가게이름"
            android:textSize="22dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/store_type"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_store_image"
            app:layout_constraintTop_toBottomOf="@id/store_name"
            app:layout_constraintBottom_toTopOf="parent"
            android:text="타입"
            android:textSize="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingTop="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>